<%= form_with model: @car_category, local: true do |form| %>
<% if @car_category.errors.any? %>
<% @car_category.errors.full_messages.each do |message| %>
    <%= message %>
<% end %>
<% end %>
    <p>
    <%= form.label :name, 'Nome' %>
    <%= form.text_field :name %>
    </p>
    <p>
    <%= form.label :daily_rate, 'Diária' %>
    <%= form.text_field :daily_rate %>
    </p>
    <p>
    <%= form.label :car_insurance, 'Seguro do automóvel' %>
    <%= form.text_field :car_insurance %>
    </p>
    <p>
    <%= form.label :third_party_insurance, 'Seguro contra terceiros' %>
    <%= form.text_field :third_party_insurance %>
    </p>
    <p>
    <%= form.submit 'Enviar' %>
    </p>
<% end %>