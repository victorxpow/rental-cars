<%= form_with model: @car, class: 'ls-form ls-form-horizontal row', local: true do |f| %>
  <div class = 'ls-label col-md-12'>
    <%= f.label :license_plate %>
    <%= f.text_field :license_plate, placeholder: 'ex ASD-7535' %></p>
    <p>
    <%= f.label :color %>
    <%= f.text_field :color, placeholder: 'ex Azul' %></p>
    <p>
    <%= f.label :mileage %>
    <%= f.text_field :mileage, placeholder: 'ex 10000' %></p>
    <p>
    <%= f.label :car_model_id %>
    <%= f.collection_select :car_model_id, @car_models, :id, :name%></p>
  </div>
  <div class="button">
    <div class='ls-actions-btn button'>
        <%= f.submit 'Salvar', class: 'ls-btn', style: "color: rgb(79, 89, 216);" %>
        <%= link_to 'Voltar', url_for(:back), class:"ls-btn" %>
    </div>
  </div>
<% end %>