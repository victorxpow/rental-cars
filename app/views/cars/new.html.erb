<%= form_with model:@car, local: true do |form| %>
    <p>
        <%= form.label :license_plate, 'Placa' %>
        <%= form.text_field :license_plate %>
    </p>

    <p>
        <%= form.label :mileage, 'Quilometragem' %>
        <%= form.text_field :mileage %>
    </p>

    <p>
        <%= form.label :color, 'Cor' %>
        <%= form.text_field :color %>
    </p>

    <p>
        <%= form.label :car_model_id, 'Nome do modelo' %>
        <%= form.collection_select :car_model_id, @car_models, :id, :name%>
    </p>
    <p><%= form.submit 'Enviar' %></p>
<% end %>
<%= link_to 'Voltar', cars_path %>