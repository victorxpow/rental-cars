<h1 class="ls-title-intro ls-ico-text"><%= Manufacturer.model_name.human(count: 2) %></h1>

<%= link_to 'Registrar Novo', new_manufacturer_path, class: 'ls-btn-primary button' %>

<table class="ls-table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
    <% @manufacturers.each do |manufacturer| %>
      <tr id="manufacturer-<%= manufacturer.id %>">
        <td><%= manufacturer.name %></td>
        <td>
          <%= link_to '', manufacturer_path(manufacturer), class: "ls-ico-zoomin" %>
          <%= link_to '', edit_manufacturer_path(manufacturer), class: "ls-ico-pencil" %>
          <%= link_to '', manufacturer_path(manufacturer), method: :delete, class: "ls-ico-remove",
          data: { confirm: "Tem certeza de que deseja deletar #{manufacturer.name}?"} %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>
