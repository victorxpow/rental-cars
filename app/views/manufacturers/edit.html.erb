<h1>Editar <%= @manufacturers.human_attribute_name(:manufacturer) %>:</h1>

<% if @manufacturer.errors.any? %>
    <% @manufacturer.errors.full_messages do |msg| %>
        <%= msg %>
    <% end %>
<% end %>

<%= form_with model: @manufacturer, local: true do |form| %>
    <p><%= form.label :name %>
    <%= form.text_field :name %>
    </p>

    <p>
    <%= form.submit %>
    </p>
<% end %>